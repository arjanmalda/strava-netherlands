{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "plugins": ["stylelint-no-px", "stylelint-use-nesting", "stylelint-declaration-strict-value"],
  "rules": {
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "no-descending-specificity": null,
    "meowtec/no-px": true,
    "csstools/use-nesting": "always",
    "scale-unlimited/declaration-strict-value": ["/color$/", "font-size", "font-weight", "line-height"]
  }
}
